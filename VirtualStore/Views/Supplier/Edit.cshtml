﻿@model VirtualStore.Models.supplier

@{
    ViewBag.Title = "Edit";
}

<h2>Update Supplier</h2>

<form method="POST" action="/Supplier/Edit/@Model.SupplierId">
    <input class="form-control" type="text" style="display:none;" name="SupplierId" value="@Model.SupplierId" />

    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" name="SupplierName" value="@Model.SupplierId" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input class="form-control" type="text" name="SupplierAddress" value="@Model.SupplierAddress " />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="number" name="SupplierEmail" value="@Model.SupplierEmail" />
    </div>
    <div>

        <input class="btn btn-dark" type="submit" value="Edit" />
    </div>

</form>