﻿@model VirtualStore.Models.Vaporizer
@{
    ViewBag.Title = "Create";
}

<h2>Create Vaporizer</h2>
<form action="/Vaporizer/Create" method="POST">
    <div class="form-group">
        <label>VaporizerName:</label> <input  class="form-control"type="text" name="VaporizerName" />
    </div>
    <div class="form-group">
        <label>FlavourName:</label> <input  class="form-control"type="text" name="FlavourName" />
    </div>
    <div class="form-group">
        <label>Buying Price:</label> <input  class="form-control" type="number" name="BuyingPrice " />
    </div>
    <div class="form-group">
        <label>Selling Price:</label> <input  class="form-control" type="number" name="SellingPrice" />
    </div>
    <div class="form-group">
        <label>Profit(in percentage):</label> <input  class="form-control" type="number" name="Profit" />
    </div>
    <div class="form-group">
        <label>Customer Ratings:</label> <input  class="form-control" type="text" name="CustomerRatings" />
    </div>
    <div class="form-group">
        <label>SupplierID:</label> <input  class="form-control" type="number" name="SupplierId" />
    </div>
    <div class="form-group">
        <label>CategoryID:</label> <input  class="form-control" type="number" name="CategoryId" />
    </div>
    <div class="form-group">
        <input class="btn btn-dark" type="submit" value="Add Vaporizer" />

    </div>
</form>